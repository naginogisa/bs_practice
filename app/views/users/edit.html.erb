<body>
  <h1>User info</h1>
  <%= form_for(@user) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class=field>
      <label>Name</label>
      <%= f.text_field :name %>
    </div>

    <div class="form-group has-icon">
    <div class="user-edit-image">
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb" %>
    </div>
    <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form", fallback: "no_image.jpg" %>
    </div>          
    
    <div class=field>
      <label>Introduction</label>
      <%= f.text_area :introduction %><br>
    </div>
    
    <div class=actions>
      <%= f.submit 'Update User' %><br>
    </div>
    
    <% end %>
  </body>